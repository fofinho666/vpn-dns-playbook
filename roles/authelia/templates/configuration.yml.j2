---
###############################################################
#                   Authelia configuration                    #
###############################################################

jwt_secret: {{ jwt_secret }}
default_redirection_url: https://{{ authelia_subdomain }}

ntp:
  disable_failure: true

server:
  host: 0.0.0.0
  port: 9091

log:
  level: debug

totp:
  issuer: authelia.com

authentication_backend:
  file:
    path: /config/users_database.yml

access_control:
  default_policy: deny
  rules:
    - domain: {{ authelia_subdomain }}
      policy: bypass
{% for external_service in external_services %}
    - domain: {{ external_service.subdomain }}
      policy: two_factor
{% endfor %}

session:
  name: authelia_session
  secret: {{ session_secret }}
  domain: {{ domain }}  # Should match whatever your root protected domain is
  expiration: 1h
  inactivity: 5m
  remember_me_duration:  1M

  redis:
    host: redis
    port: 6379

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 300

storage:
  encryption_key: {{ storage_encryption_key }}
  local:
    path: /config/db.sqlite3

notifier:
    filesystem:
        filename: /config/notification.txt